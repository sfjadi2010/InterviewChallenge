@model IEnumerable<ToDoItem>;

<ul>
    @foreach (var item in Model)
    {
        <li class="list-group-item">
            <div class="row">
                <div class="col-md-11 col-xs-11 col-lg-11 col-sm-11 task-text">
                    <span class="font-italic font-weight-bolder task-text">@item.Title</span>
                </div>
                <div class="col-md-1 col-xs-1 col-lg-1 col-sm-1 checkbox">
                    <span class="align-content-end">@Html.CheckBox("Completed", @item.Completed, new { @class = "form-check-inline" })</span>
                </div>
            </div>
        </li>
    }
</ul>
